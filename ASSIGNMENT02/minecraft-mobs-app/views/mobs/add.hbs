{{! Add a new mob to the DB via this form }}
<h1>{{title}}</h1>
<form method="post">
  <fieldset>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />
  </fieldset>
  <fieldset>
    <label for="imageURL">Image URL:</label>
    <input type="text" id="imageURL" name="imageURL" required />
  </fieldset>
  <fieldset>
    <label for="hp">HP:</label>
    <input type="number" id="hp" name="hp" required />
  </fieldset>
  <fieldset>
    <label for="attack">Attack:</label>
    <input type="number" id="attack" name="attack" required />
  </fieldset>
  <fieldset>
    <label for="itemHeld">Item held:</label>
    <input type="text" id="itemHeld" name="itemHeld" required />
  </fieldset>
  <fieldset>
    <label for="itemsDropped">Items dropped:</label>
    <input type="text" id="itemsDropped" name="itemsDropped" required />
  </fieldset>
  <fieldset>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required />
  </fieldset>
  <fieldset>
    <label for="gameVersion">Game version:</label>
    <input type="text" id="gameVersion" name="gameVersion" required />
  </fieldset>
  <button class="btn btn-primary">Save New Mob</button>
</form>